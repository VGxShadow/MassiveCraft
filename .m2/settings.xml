<settings>
  <servers>

    <server>
      <id>massivecraft-repo</id>
      <username>${env.MAVEN_DEPENDENCIES_USER}</username>
      <password>${env.MAVEN_DEPENDENCIES_PASS}</password>
    </server>

    <server>
      <id>massivecraft-releases</id>
      <username>${env.MAVEN_REPO_USER_RELEASES}</username>
      <password>${env.MAVEN_REPO_PASS_RELEASES}</password>
    </server>

    <server>
      <id>massivecraft-snapshots</id>
      <username>${env.MAVEN_REPO_USER_SNAPSHOTS}</username>
      <password>${env.MAVEN_REPO_PASS_SNAPSHOTS}</password>
    </server>

  </servers>

  <profiles>
    <profile>
      <id>deployment</id>
      <repositories>
        <repository>
          <id>massivecraft-repo</id>
          <name>Massivecraft Deployment Dependencies</name>
          <url>${env.MAVEN_DEPENDENCIES_URL}</url>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>deployment</activeProfile>
  </activeProfiles>

</settings>
